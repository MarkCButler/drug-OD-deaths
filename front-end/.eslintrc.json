{
  "env": {
    "browser": true,
    "es2022": true,
    "node": true
  },
  "extends": [
    "eslint:recommended", "google"
  ],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "rules": {
    "arrow-parens": "off",
    "comma-dangle": "off",
    "indent": ["error", 2],
    "no-multi-spaces": ["error", { "ignoreEOLComments": true }],
    "require-jsdoc" : "off",
    "spaced-comment": "off"
  }
}
